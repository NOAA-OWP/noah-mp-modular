
#=============================================================================================
#  Options for MacOS Big Sur with gfortran, NETCDF via Brew
#=============================================================================================

 COMPILERF90    =       /usr/local/bin/gfortran
 FREESOURCE     =       -ffree-form  -ffree-line-length-none
 F90FLAGS       =       -g -fbacktrace -Wall -fcheck=all #-fdefault-real-8
 CPP            =       /usr/local/bin/cpp-10
 CPPFLAGS       =       -P -traditional -D_GFORTRAN_
 NETCDFMOD      =       -I/usr/local/Cellar/netcdf/4.8.0_2/include
 NETCDFLIB      =       -L/usr/local/Cellar/netcdf/4.8.0_2/lib -lnetcdf -lnetcdff

